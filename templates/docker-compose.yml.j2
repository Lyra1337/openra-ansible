# {{ ansible_managed }}
version: '3.7'

services:
    openra:
        image: "rmoriz/openra:latest"
        container_name: "{{ docker_container_name }}"
        restart: unless-stopped
        ports:
            - {{ openra_port }}:{{ openra_port }}
        environment:
            - Mod=ra
            - Name={{ openra_server_name }}
            - ListenPort={{ openra_port }}
            - AdvertiseOnline=True